<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:layout_gravity="end"
    android:background="#00000000"
    android:elevation="4dp"
    android:gravity="end"
    app:popupTheme="@style/Theme.AppCompat.Light.NoActionBar"
    app:theme="@style/Theme.AppCompat.Light.NoActionBar" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/btnBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/marginleftBackButton"
            android:background="@drawable/icon_back" />

        <TextView
            android:id="@+id/tvToolBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/marginleftToolbarText"
            android:layout_toRightOf="@+id/btnBack"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textSize="@dimen/textSizeMedium" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imViewAttachment"
                android:layout_width="@dimen/attachmentBlackIconWidth"
                android:layout_height="@dimen/attachmentBlackIconHeight"
                android:layout_marginRight="@dimen/marginTopBUttonSignIn"
                android:background="@drawable/attechedment_black"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/imViewOverFlow"
                android:layout_width="@dimen/overflowMenuIconWidth"
                android:layout_height="@dimen/overflowMenuIconHeight"
                android:layout_marginRight="@dimen/marginLeftRightllFields"
                android:background="@drawable/overflow_menu"
                android:visibility="invisible" />
        </LinearLayout>
    </RelativeLayout>
  

    <TextView
        android:id="@+id/btn_skip"
        android:layout_width="40dp"
        android:layout_height="@dimen/menuIconDimension"
        android:layout_gravity="end"
        android:layout_marginRight="20dp"
        android:visibility="gone"
        android:text="Skip"
        android:textStyle="bold"
        android:textSize="16dp"
        android:textColor="#ffffff"/>

</android.support.v7.widget.Toolbar>
