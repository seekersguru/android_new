<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottomBarHeight"
        android:background="#ffffff" >

        <Button
            android:id="@+id/btnBack"
            android:layout_width="@dimen/btnBackWidth"
            android:layout_height="@dimen/btnBackHeight"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/marginLeftRightllFields"
            android:background="@drawable/back_orange" />

        <TextView
            android:id="@+id/tvCategoryType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/paddingLeftEditText"
            android:layout_toRightOf="@+id/btnBack"
            android:textColor="@color/OrangeColorTheme"
            android:textSize="@dimen/textSizeMedium"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tvToolBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/marginleftToolbarText"
            android:layout_toRightOf="@+id/btnBack"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textSize="@dimen/textSizeMedium" />

        <SearchView
            android:id="@+id/searchView"
            style="@style/edittext_style"
            android:layout_width="match_parent"
            android:layout_height="@dimen/heightSearchBar"
            android:layout_marginLeft="@dimen/marginLeftSearchBar"
            android:gravity="right"
            android:iconifiedByDefault="true"
            android:paddingRight="@dimen/paddingLeftEditText"
            android:visibility="invisible" >
        </SearchView>

        <Button
            android:id="@+id/btnSeacrh"
            android:layout_width="@dimen/dimenCustomactionBarSearchIcom"
            android:layout_height="@dimen/dimenCustomactionBarSearchIcom"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/paddingLeftEditText"
            android:background="@drawable/search_icon_black"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/imViewOverflowMenuicon"
            android:layout_width="@dimen/overflowMenuIconWidth"
            android:layout_height="@dimen/overflowMenuIconHeight"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/overflow_menu"
            android:paddingRight="@dimen/paddingLeftEditText"
            android:visibility="invisible" />

        <View
            android:id="@+id/viewTopbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottomBarDividerHeight"
            android:layout_alignParentBottom="true"
            android:background="@drawable/divider_bottom_bar" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_marginTop="@dimen/paddingLeftEditText"
        android:layout_gravity="center_horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Switch Category"
                android:textColor="@color/OrangeColorTheme"
                android:textSize="@dimen/textSizeMedium" />

            <Button
                android:layout_width="15dp"
                android:layout_height="10dp"
                android:background="@drawable/arrow_down_orange" />
        </LinearLayout>

        <Spinner
            android:id="@+id/spSwitchCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:spinnerMode="dialog"
            android:visibility="invisible" />

        <Button
            android:id="@+id/btnCategory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000" />
    </FrameLayout>

    <ListView
        android:id="@+id/favList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:horizontalSpacing="0dp"
        android:scrollbars="none"
        android:verticalSpacing="0dp" >

        <!-- tools:listitem="@layout/favorite_item" -->
    </ListView>

    <!-- <include layout="@layout/bottombar" /> -->

</LinearLayout>