<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/rowHeightEnquiryDetails"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/key_label"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/paddingLeftEditText"
            android:layout_weight=".45"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:text="Event Date"
            android:textColor="#999999"
            android:textSize="@dimen/textSizeNormal" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".1"
            android:gravity="center_vertical"
            android:text=":"
            android:textColor="#999999"
            android:textSize="@dimen/textSizeMedium" />

        <TextView
            android:id="@+id/value_label"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".45"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/marginLeftRightllFields"
            android:singleLine="true"
            android:text="25-Nov-2015"
            android:textColor="#000000"
            android:textSize="@dimen/textSizeNormal" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9c9c9c" />

</LinearLayout>