<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff" >

    <RelativeLayout
        android:id="@+id/rlTopBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:background="#ffffff"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/btnBack"
            android:layout_width="@dimen/btnBackWidth"
            android:layout_height="@dimen/btnBackHeight"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/marginleftBackButton"
            android:background="@drawable/back_orange" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:singleLine="true"
            android:text="Messages"
            android:textColor="#000000"
            android:textSize="@dimen/textSizeMedium" />

        <ImageView
            android:id="@+id/imViewOverflowMenuicon"
            android:layout_width="@dimen/overflowMenuIconWidth"
            android:layout_height="@dimen/overflowMenuIconHeight"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/overflow_menu"
            android:visibility="invisible" />

        <Button
            android:id="@+id/refresh_button"
            android:layout_width="@dimen/btnBackWidth"
            android:layout_height="@dimen/btnBackWidth"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:background="@drawable/refresh_button" />

        <View
            android:id="@+id/viewTopbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bottomBarDividerHeight"
            android:layout_alignParentBottom="true"
            android:background="@drawable/divider_bottom_bar"
            android:visibility="visible" />
    </RelativeLayout>

    <ListView
        android:id="@+id/lvMessages"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rlTopBar"
        android:cacheColorHint="@android:color/transparent"
        android:divider="#f1f1f1"
        android:layout_above="@+id/llBottomBarParent"
        android:dividerHeight="1dp" >
    </ListView>

    <TextView
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="No Message."
        android:textColor="#000"
        android:visibility="gone" >
    </TextView>

    <LinearLayout
        android:id="@+id/llBottomBarParent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottomBarHeight"
        android:layout_alignParentBottom="true"
        android:background="#F0EEEF"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#9c9c9c" />

        <LinearLayout
            android:id="@+id/llBottomBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="1" >

            <LinearLayout
                android:id="@+id/llHome"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:orientation="vertical" >

                <!-- <View -->
                <!-- android:id="@+id/viewSeparatorOrangeFirst" -->
                <!-- android:layout_width="match_parent" -->
                <!-- android:layout_height="3dp" -->
                <!-- android:background="@drawable/divider_orange" /> -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/btnHome"
                        android:layout_width="@dimen/dimenBottomBarIcons"
                        android:layout_height="@dimen/dimenBottomBarIcons"
                        android:layout_gravity="center"
                        android:background="@drawable/home_unselected" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llMail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:orientation="vertical" >

                <View
                    android:id="@+id/viewSeparatorOrangeSecond"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@drawable/divider_orange"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/btnMail"
                        android:layout_width="@dimen/dimenBottomBarIcons"
                        android:layout_height="@dimen/dimenBottomBarIcons"
                        android:layout_gravity="center"
                        android:background="@drawable/mail_selected" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llLeads"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:orientation="vertical" >

                <View
                    android:id="@+id/viewSeparatorOrangeThird"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@drawable/divider_orange"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/btnLeads"
                        android:layout_width="@dimen/dimenBottomBarIcons"
                        android:layout_height="@dimen/dimenBottomBarIcons"
                        android:layout_gravity="center"
                        android:background="@drawable/leads_icon" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llMenu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25"
                android:orientation="vertical" >

                <View
                    android:id="@+id/viewSeparatorOrangeFourth"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@drawable/divider_orange"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/btnMenu"
                        android:layout_width="@dimen/dimenBottomBarIcons"
                        android:layout_height="@dimen/dimenBottomBarIcons"
                        android:layout_gravity="center"
                        android:background="@drawable/menu_unselected" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>